{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch",
      "Task",
      "mcp__linear__*",
      "mcp__playwright__*",
      "mcp__figma__*",
      "mcp__browser__*",
      "mcp__postgres__*"
    ],
    "deny": [
      "Bash(rm -rf /)*",
      "Bash(rm -rf ~)*",
      "Bash(rm -rf .)*",
      "Bash(DROP DATABASE)*",
      "Bash(DROP TABLE)*",
      "Bash(TRUNCATE)*",
      "Bash(git push --force)*",
      "Bash(git push -f)*",
      "Bash(git reset --hard)*",
      "Bash(git clean -f)*",
      "Bash(git checkout -- .)*",
      "Bash(npm publish)*",
      "Bash(npx publish)*",
      "Bash(curl * | bash)*",
      "Bash(wget * | bash)*",
      "Bash(chmod 777)*",
      "Bash(> /dev/sda)*"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-bash-guard.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-write-guard.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-code-guard.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-write-lint.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/post-write-todo-check.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/post-write-security-scan.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/post-write-api-format-check.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-commit-quality.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/on-stop-summary.sh"
          }
        ]
      }
    ]
  }
}
